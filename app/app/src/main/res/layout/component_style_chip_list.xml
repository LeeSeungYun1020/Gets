            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/casual_chip"
            app:layout_constraintStart_toStartOf="@id/casual_chip"
            app:layout_constraintTop_toBottomOf="@id/casual_chip" />

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
