<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:id="@+id/minimal_chip"
            android:layout_width="76dp"
            android:layout_height="76dp"
            app:cardForegroundColor="@color/chip_foreground_color"
            android:background="@drawable/ch_minimal"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="38dp"
            app:checkedIcon="@drawable/ic_check_24"
            app:checkedIconMargin="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:checkedIconTint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/chip_stroke_color"
            app:strokeWidth="2dp">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ch_minimal" />
        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/style_minimal"
            android:textColor="@color/signInGrey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/minimal_chip"
            app:layout_constraintStart_toStartOf="@id/minimal_chip"
            app:layout_constraintTop_toBottomOf="@id/minimal_chip" />

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:id="@+id/casual_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="38dp"
            app:layout_constraintStart_toEndOf="@id/minimal_chip"
            android:checkable="true"
            app:cardForegroundColor="@color/chip_foreground_color"
            android:clickable="true"
            android:focusable="true"
            app:checkedIcon="@drawable/ic_check_24"
            app:checkedIconMargin="24dp"
            app:checkedIconTint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/chip_stroke_color"
            app:strokeWidth="2dp">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
