        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/style_street"
            android:textColor="@color/signInGrey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/street_chip"
            app:layout_constraintStart_toStartOf="@id/street_chip"
            app:layout_constraintTop_toBottomOf="@id/street_chip" />

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:id="@+id/rock_chic_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardForegroundColor="@color/chip_foreground_color"
            app:cardCornerRadius="38dp"
