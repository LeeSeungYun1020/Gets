<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_title"
        android:layout_marginStart="26dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/list_item1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/component_card_image"
        app:layout_constraintTop_toBottomOf="@id/list_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/list_item2"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp" />

    <include
        android:id="@+id/list_item2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/component_card_image"
        app:layout_constraintTop_toTopOf="@id/list_item1"
        app:layout_constraintStart_toEndOf="@id/list_item1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="26dp" />

    <include
        android:id="@+id/list_item3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/component_card_image"
        app:layout_constraintTop_toBottomOf="@id/list_item1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/list_item4"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp" />

    <include
        android:id="@+id/list_item4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/component_card_image"
        app:layout_constraintTop_toTopOf="@id/list_item3"
        app:layout_constraintStart_toEndOf="@id/list_item3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="26dp" />

    <include
        android:id="@+id/list_item5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/component_card_image"
        app:layout_constraintTop_toBottomOf="@id/list_item3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/list_item6"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp" />

    <include
        android:id="@+id/list_item6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/component_card_image"
        app:layout_constraintTop_toTopOf="@id/list_item5"
        app:layout_constraintStart_toEndOf="@id/list_item5"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="26dp" />
</androidx.constraintlayout.widget.ConstraintLayout>