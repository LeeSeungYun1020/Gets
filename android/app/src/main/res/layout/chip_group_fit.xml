<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp">

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_regularfit"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:checked="false"
        android:text="@string/fit_regular"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_overfit"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:checkable="true"
        android:checked="false"
        android:text="@string/fit_over"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/chip_regularfit"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_widefit"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:checkable="true"
        android:checked="false"
        android:text="@string/fit_wide"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/chip_overfit"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_semi_widefit"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:checkable="true"
        android:checked="false"
        android:text="@string/fit_semi_wide"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/chip_widefit"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_straight"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:checked="false"
        android:text="@string/fit_straight"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chip_regularfit" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_slim"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:checkable="true"
        android:checked="false"
        android:text="@string/fit_slim"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/chip_straight"
        app:layout_constraintTop_toBottomOf="@id/chip_overfit" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_taperedfit"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:checkable="true"
        android:checked="false"
        android:text="@string/fit_tapered"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/chip_slim"
        app:layout_constraintTop_toBottomOf="@id/chip_widefit" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_bootcut"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:checkable="true"
        android:checked="false"
        android:text="@string/fit_bootcut"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/chip_taperedfit"
        app:layout_constraintTop_toBottomOf="@id/chip_semi_widefit" />

</androidx.constraintlayout.widget.ConstraintLayout>