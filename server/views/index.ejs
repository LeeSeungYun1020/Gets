<body>

<%- include('header'); -%>

<div class="magazine">
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <img class="main_article" id="main" src="/images/home/main_image.png">
            </div>
            <div class="swiper-slide">
                <img class="main_article" id="main" src="/images/home/main_image.png">
            </div>
            <div class="swiper-slide">
                <img class="main_article" id="main" src="/images/home/main_image.png">
            </div>
            <div class="swiper-slide">
