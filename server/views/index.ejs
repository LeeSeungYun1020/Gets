                    </ul>
                </div>
            </div>
            <div class = line></div>
        </div>
        <div id = "select_area">
            <div class = "select_box">
                <h2><%= string.age %></h2>
                <div id="select-wrap">
                    <div id="select" class="select"><%= string.age_10%></div>
                    <ul id="ul" class="select-ul">
                        <li><%= string.age_10%></li>
                        <li><%= string.age_20%></li>
                        <li><%= string.age_30%></li>
                        <li><%= string.age_40%></li>
                        <li><%= string.age_50%></li>
                    </ul>
                </div>
            </div>
            <div class = line></div>
        </div>
        <div id = "select_area">
            <div class = "select_box">
                <h2><%= string.body_type %></h2>
                <div id="select-wrap">
                    <div id="select" class="select"><%= string.lower_body_fat%></div>
                    <ul id="ul" class="select-ul">
                        <li><%= string.lower_body_fat%></li>
