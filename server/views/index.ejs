        <div class="swiper-button-next"></div>
    </div>
</div>

<div id="my_style">
    <h1><%= string.select_info %></h1>
    <div id = "style_select">
        <div id = "select_area">
            <div class = "select_box">
                <h2><%= string.gender %></h2>
                <div id="select-wrap">
                    <div id="select" class="select"><%= string.woman%></div>
                    <ul id="ul" class="select-ul">
                        <li><%= string.woman%></li>
